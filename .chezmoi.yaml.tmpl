{{- $osID := .chezmoi.os -}}
{{- if (hasKey .chezmoi "osRelease") -}}
{{-   $osID = .chezmoi.osRelease.id -}}
{{- end -}}

{{ $name := promptStringOnce . "name" "What is your name" -}}

{{ $git_name := promptStringOnce . "git_name" "What is your git username" -}}
{{ $git_email := promptStringOnce . "git_email" "What is your git email" -}}

data:
  osid: {{ $osID | quote }}
  name: {{ $name | quote }}
  git_name: {{ $git_name | quote }}
  git_email: {{ $git_email | quote }}