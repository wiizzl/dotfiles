{{- $exts := list
  "awww-switcher"
  "arch-packages"
-}}

{{- range $slug := $exts }}
[".cache/vicinae-build/store.vicinae.{{ $slug }}"]
  type = "archive"
  url = "https://github.com/vicinaehq/extensions/archive/refs/heads/main.tar.gz"
  exact = true
  stripComponents = 3
  refreshPeriod = "168h"
  include = ["*/extensions/{{ $slug }}/**"]
{{ end -}}