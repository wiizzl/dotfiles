export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME=""

zstyle ':omz:update' mode reminder

plugins=(
  sudo
  web-search
  copypath
  copyfile
  copybuffer
  dirhistory
  git
  zsh-syntax-highlighting
  zsh-autosuggestions
{{ if eq .osid "linux-arch" -}}
  archlinux
{{- end }}
{{ if eq .osid "darwin" -}}
  macos
{{- end }}
)

source $ZSH/oh-my-zsh.sh

HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

bindkey -e

{{ if eq .osid "linux-arch" -}}
if [[ "$TERM" == "xterm-kitty" ]]; then
  alias ssh="kitten ssh"
fi

export "MICRO_TRUECOLOR=1"

alias nano=micro
{{- end }}

alias cat=bat
export MANPAGER="bat -plman"

alias ls="eza -l --icons --group-directories-first --git"
alias l="eza --icons -a --group-directories-first -1"
alias ll="eza --icons -a --group-directories-first -1 --no-user --long"
alias tree="eza --icons --tree --group-directories-first"

source <(fzf --zsh)

eval "$(starship init zsh)"
eval "$(zoxide init zsh --cmd cd)"