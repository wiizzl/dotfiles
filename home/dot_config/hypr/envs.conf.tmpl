$terminal = {{ .terminal }}

$browser = zen-browser
$ai = zen-browser --new-window "https://gemini.google.com"
$private = zen-browser --private-window

$fileManager = thunar
$taskManager = $terminal -e btop
$docker = $terminal -e lazydocker
$music = spotify-launcher

env = QT_QPA_PLATFORMTHEME,qt6ct

env = HYPRCURSOR_THEME,{{ .cursor_name }}
env = HYPRCURSOR_SIZE,{{ .cursor_size }}
env = XCURSOR_THEME,{{ .cursor_name }}
env = XCURSOR_SIZE,{{ .cursor_size }}