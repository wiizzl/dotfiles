[user]
	email = "{{ .git_email }}"
	name = "{{ .git_name }}"

[init]
	defaultBranch = "main"

[pull]
	rebase = true

[url "git@github.com:"]
	insteadOf = gh:

[url "git@github.com:wiizzl/"]
	insteadOf = me:

{{- $ghPath := lookPath "gh" }}
{{ if $ghPath }}
[credential "https://github.com"]
	helper = !{{ $ghPath }} auth git-credential

[credential "https://gist.github.com"]
	helper = !{{ $ghPath }} auth git-credential
{{- end }}